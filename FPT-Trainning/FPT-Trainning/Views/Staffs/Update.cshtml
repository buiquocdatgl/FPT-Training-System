@model FPT_Trainning.Models.ApplicationUser
@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";}

<h2 style="margin:0px 0px 20px 20px">Edit this staff's full name</h2>

@using (Html.BeginForm("Update", "Staffs", "POST"))
{

    @Html.HiddenFor(model => model.Id)

    <div class="form-group" style="margin-left: 20px; font-weight:bold">
        @Html.LabelFor(model => model.FullName)
        @Html.TextAreaFor(model => model.FullName, new { @class = "form-control", style = "width:350px" })
    </div>
    <div class="form-group" style="margin-left: 15px">
        <button type="submit" class="btn btn-primary">Confirm changes</button>
    </div>
}

