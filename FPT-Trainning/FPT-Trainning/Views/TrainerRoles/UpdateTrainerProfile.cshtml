@model FPT_Trainning.ViewModel.UserInfo
@{
    ViewBag.Title = "UpdateTrainerProfile";
}

<div class="container-fluid">
    <h3 class="text-dark mb-4">Update Trainer Profile</h3>
    <div class="row mb-3">
        <div class="col-lg-12">
            <div class="row mb-3 d-none">
                <div class="col">
                    <div class="card text-white bg-primary shadow">
                        <div class="card-body">
                            <div class="row mb-2">
                                <div class="col">
                                    <p class="m-0">Peformance</p>
                                    <p class="m-0"><strong>65.2%</strong></p>
                                </div>
                                <div class="col-auto"><i class="fas fa-rocket fa-2x"></i></div>
                            </div>
                            <p class="text-white-50 small m-0"><i class="fas fa-arrow-up"></i>&nbsp;5% since last month</p>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="card text-white bg-success shadow">
                        <div class="card-body">
                            <div class="row mb-2">
                                <div class="col">
                                    <p class="m-0">Peformance</p>
                                    <p class="m-0"><strong>65.2%</strong></p>
                                </div>
                                <div class="col-auto"><i class="fas fa-rocket fa-2x"></i></div>
                            </div>
                            <p class="text-white-50 small m-0"><i class="fas fa-arrow-up"></i>&nbsp;5% since last month</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="card shadow mb-3">
                        <div class="card-header py-3">
                            <p class="text-primary m-0 font-weight-bold">Update Trainer Profile</p>
                        </div>
                        <div class="card-body">
                            @using (Html.BeginForm("UpdateTrainerProfile", "TrainerRoles", "POST"))
                            {
                                @Html.HiddenFor(model => model.trainer.TrainerId)
                                <div class="form-row">
                                    <div class="col">
                                        @Html.LabelFor(model => model.trainer.Education)
                                        @Html.TextBoxFor(model => model.trainer.Education, new { @class = "form-control", style = "width:350px" })
                                    </div>
                                    <div class="col">
                                        @Html.LabelFor(model => model.trainer.Phone)
                                        @Html.TextBoxFor(model => model.trainer.Phone, new { @class = "form-control", style = "width:350px" })
                                    </div>

                                </div>
                                <div class="form-row">
                                    <div class="col">
                                        @Html.LabelFor(model => model.trainer.WorkingPlace)
                                        @Html.TextBoxFor(model => model.trainer.WorkingPlace, new { @class = "form-control", style = "width:350px" })
                                    </div>
                                    <div class="col">
                                        @Html.LabelFor(model => model.trainer.Type)
                                        @Html.EnumDropDownListFor(model => model.trainer.Type, new { @class = "form-control", style = "width:350px" })
                                    </div>

                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary" style="margin-left: 20px; margin-top: 20px">Save Change</button>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

