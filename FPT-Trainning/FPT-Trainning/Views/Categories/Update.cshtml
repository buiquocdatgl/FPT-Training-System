@model FPT_Trainning.Models.Category
﻿
@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="margin: 0px 0px 20px 20px">Update Category</h2>
@using (Html.BeginForm("Update", "Categories", "POST"))
{
    <div class="form-group" style="margin-left: 20px; font-weight: bold">
        @Html.HiddenFor(model => model.Id)
        @Html.LabelFor(model => model.Name)
        @Html.TextBoxFor(model => model.Name, new { @class = "form-control", style = "width:350px" })
    </div>

    <div class="form-group" style="margin-left: 20px; font-weight: bold">
        @Html.LabelFor(model => model.Description)
        @Html.TextBoxFor(model => model.Description, new { @class = "form-control", style = "width:350px" })
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary" style="margin-left: 20px">Update this Category</button>
    </div>
}

