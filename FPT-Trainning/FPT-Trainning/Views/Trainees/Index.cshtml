@model IEnumerable<FPT_Trainning.Models.Trainee>
@{ ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";}

<h2>Trainees' Index</h2>

@using (Html.BeginForm("Index", "Trainees", "POST"))
{
    <div class="form-group">
        <label for="fname">Search by Trainee's full name:</label><br>
        @Html.TextBox("searchInput", null, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Search</button>
    </div>
}
<table class="table table-bordered">
    <thead>
        <tr>
            <th>E-mail</th>
            <th>Full name</th>
            <th>Programming language</th>
            <th>Age</th>
            <th>Date of birth</th>
            <th>Experience level</th>
            <th>Education level</th>
            <th>Address</th>
            <th>TOEIC rating</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.UserName</td>
                <td>@item.ApplicationUser.FullName</td>
                <td>@item.ProgramLanguage</td>
                <td>@item.Age</td>
                <td>@item.DOB</td>
                <td>@item.Experience</td>
                <td>@item.Education</td>
                <td>@item.Location</td>
                <td>@item.ToeicScore</td>
                <td>
                    @Html.ActionLink("Details of this trainee's profile", "Details", "Trainees",
                                                          new { id = item.TraineeId },
                                                          new { @class = "btn btn-primary" })
                    @Html.ActionLink("Edit this trainee's profile", "Update", "Trainees",
                                                          new { id = item.TraineeId },
                                                          new { @class = "btn btn-dark" })
                    @Html.ActionLink("Delete this trainee", "Delete", "Trainees",
                                                          new { id = item.TraineeId },
                                                          new { @class = "btn btn-danger" })
                    @Html.ActionLink("Reset & enter new password of this trainee", "ResetPassword", "Account",
                                                          new { id = item.ApplicationUser.Id },
                                                          new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>