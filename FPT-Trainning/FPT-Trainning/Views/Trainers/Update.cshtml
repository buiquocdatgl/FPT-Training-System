@model FPT_Trainning.Models.Trainer
@{ ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";}

<h2 style="margin-left:20px; padding-bottom:20px">Edit this trainer's profile</h2>

@using (Html.BeginForm("Update", "Trainers", "POST"))
{

    @Html.HiddenFor(model => model.TrainerId)

    <div class="form-group", style="margin-left: 20px; font-weight:bold">
        @Html.LabelFor(model => model.ApplicationUser.FullName)
        @Html.TextAreaFor(model => model.ApplicationUser.FullName, new { @class = "form-control", style = "width:350px" })
    </div>

    <div class="form-group" , style="margin-left: 20px; font-weight:bold">
        @Html.LabelFor(model => model.Education)
        @Html.TextAreaFor(model => model.Education, new { @class = "form-control", style = "width:350px" })
    </div>

    <div class="form-group" , style="margin-left: 20px; font-weight:bold">
        @Html.LabelFor(model => model.Phone)
        @Html.TextAreaFor(model => model.Phone, new { @class = "form-control", style = "width:350px" })
    </div>

    <div class="form-group" , style="margin-left: 20px; font-weight:bold">
        @Html.LabelFor(model => model.WorkingPlace)
        @Html.TextAreaFor(model => model.WorkingPlace, new { @class = "form-control", style = "width:350px" })
    </div>

    <div class="form-group" , style="margin-left: 20px; font-weight:bold">
        @Html.LabelFor(model => model.Type)
        @Html.EnumDropDownListFor(model => model.Type, new { @class = "form-control", style = "width:350px" })
    </div>

    <div class="form-group", style="margin-left: 10px">
        <button type="submit" class="btn btn-primary">Confirm changes</button>
    </div>
}

