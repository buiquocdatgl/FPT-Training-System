@model IEnumerable<FPT_Trainning.Models.Trainer>
@{ ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";}

<h2 style="padding-left: 15px">Trainers' Index</h2>

@using (Html.BeginForm("Index", "Trainers", "POST"))
{
    <div class="form-group">
        <label for="fname", style="padding-left: 15px">Search by Trainer's full name:</label><br>
        @Html.TextBox("searchInput", null, new { @class = "form-control" , Style = "margin-left: 15px" })
    </div>
    <div class="form-group", style="padding-left: 7px">
        <button type="submit" class="btn btn-primary">Search</button>
    </div>
}
<table class="table table-bordered", style="margin-left:15px; text-align: center; ">
    <thead style="background-color: burlywood; color: black;font-weight: bold">
        <tr>
            <th>E-mail</th>
            <th>Full name</th>
            <th>Education</th>
            <th>Phone number</th>
            <th>Type</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th>@item.ApplicationUser.Email</th>
                <th>@item.ApplicationUser.FullName</th>
                <td>@item.Education</td>
                <td>@item.Phone</td>
                <td>@item.Type</td>
                <td>
                    @if (User.IsInRole("ADMIN"))
                    {
                        @Html.ActionLink("Details of this trainer's profile", "Details", "Trainers",
                                                            new { id = item.TrainerId },
                                                            new { @class = "btn btn-primary" })
                        @Html.ActionLink("Delete this trainer", "Delete", "Trainers",
                                                              new { id = item.TrainerId },
                                                              new { @class = "btn btn-danger" })
                        @Html.ActionLink("Reset & enter new password of this trainer", "ResetPassword", "Account",
                                                              new { id = item.ApplicationUser.Id },
                                                              new { @class = "btn btn-danger" })
                    }
                    @if (User.IsInRole("STAFF"))
                    {
                        @Html.ActionLink("Details of this trainer's profile", "Details", "Trainers",
                                      new { id = item.TrainerId },
                                      new { @class = "btn btn-primary" })
                        @Html.ActionLink("Edit this trainer's profile", "Update", "Trainers",
                                                              new { id = item.TrainerId },
                                                              new { @class = "btn btn-dark" })
                        @Html.ActionLink("Delete this trainer", "Delete", "Trainers",
                                                              new { id = item.TrainerId },
                                                              new { @class = "btn btn-danger" })
                        @Html.ActionLink("Reset & enter new password of this trainer", "ResetPassword", "Account",
                                                              new { id = item.ApplicationUser.Id },
                                                              new { @class = "btn btn-danger" })
                    }
                </td>
            </tr>
        }
    </tbody>
</table>